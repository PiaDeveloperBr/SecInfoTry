<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_introduction_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.io.com.dingotrack.ui.intro.IntroductionScreen">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="100dp"
        android:src="@drawable/dingo_logo"
        android:layout_above="@+id/lnBottom" />

    <LinearLayout
        android:id="@+id/lnBottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_blue_button"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btn_login"
            style="@style/DingoButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_button"
            android:text="@string/btn_login" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/textButtonWhite" />

        <Button
            android:id="@+id/btn_register"
            style="@style/DingoButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ripple_button"
            android:text="@string/btn_register" />
    </LinearLayout>
</RelativeLayout>