<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlTop"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingLeft="12dp"
                android:gravity="center_vertical"
                android:paddingRight="12dp">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shipment 1" />

                <TextView
                    android:textStyle="bold"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Status" />
            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlTop"
                android:elevation="5dp"
                tools:targetApi="lollipop">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rlShipments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/rlStatuc"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/imgShip1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_shipping_truck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/imgShip1"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:text="Shipment 1" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="50dp"
                        android:layout_toLeftOf="@+id/rlStatuc"
                        android:background="@color/appAlphaGray" />

                    <RelativeLayout
                        android:id="@+id/rlStatuc"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="InRoute" />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/cardView1"
                android:elevation="5dp"
                tools:targetApi="lollipop">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rlShipments2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/rlStatuc2"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/imgShip2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_shipping_truck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/imgShip2"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:text="Shipment 2" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="50dp"
                        android:layout_toLeftOf="@+id/rlStatuc2"
                        android:background="@color/appAlphaGray"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rlStatuc2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_blue_button_rec"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Confirmed"
                            android:textColor="@color/appWhite" />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView2"
                android:elevation="5dp"
                tools:targetApi="lollipop">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/rlShipments3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/rlStatuc3"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/imgShip3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_shipping_truck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_toRightOf="@+id/imgShip3"
                            android:gravity="center_vertical"
                            android:paddingLeft="8dp"
                            android:text="Shipment 3" />
                    </RelativeLayout>

                    <View
                        android:layout_width="0.3dp"
                        android:layout_height="50dp"
                        android:layout_toLeftOf="@+id/rlStatuc3"
                        android:background="@color/appAlphaGray"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/rlStatuc3"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/bg_blue_button_rec"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:gravity="center"
                            android:text="Delivered"
                            android:textColor="@color/appWhite" />
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView3"
                android:layout_margin="50dp"
                android:background="@drawable/bg_blue_button">

                <Button
                    android:id="@+id/loginButton"
                    style="@style/DingoButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/btn_ok" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        android:layout_margin="@dimen/fab_margin"
        app:rippleColor="@color/appAlphaWhite"
        app:srcCompat="@drawable/fab_add" />
</RelativeLayout>